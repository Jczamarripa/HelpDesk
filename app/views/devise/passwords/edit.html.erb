<div style="width:80%;margin:0 auto;text-align:center;">
<h2>Cambia tu contrase単a</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> caracteres minimo)</em><br />
    <% end %>
    <%= f.password_field :password,placeholder: "Nueva contrase単a", autofocus: true, autocomplete: "off",class:"form-control" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation,placeholder: "Confirma tu nueva contrase単a", autocomplete: "off",class:"form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Cambiar mi contrase単a",class:"btn be-purple white" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
